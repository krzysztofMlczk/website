<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="../../resources/imgs/logo.png"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/css/lightbox.min.css">
    <style>
        @import url("../styles/base.css");
        @import url("../styles/project_page.css");

        .project-hero {
            min-height: <%= minHeight %>;
            background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.1) 2%, #222),
            url(<%= heroImg %>);
            background-position: <%= bgPosition %>;
            align-items: flex-end;
        }

        .idea {
            color: <%= ideaColor %>;
        }

        .medium-nav-grid {
            display: grid;
            grid-template-columns: <%= additionalLink !== null ? "1fr 1fr" : "1fr" %>;
            grid-gap: 30px;
        }

        @media screen and (max-width: 620px) {
            .medium-nav-grid {
                grid-template-columns: 1fr;
                grid-gap: 40px;
            }
        }

        .photo-gallery {
            display: <%= galleryImgs ? "block" : "none" %>;
        }

    </style>
    <title><%= pageTitle %></title>
</head>
<body>
    <nav class="nav-bar">
        <div class="nav-container">
            <a href="../portfolio" class="nav-link home-link">
                <i class="fas fa-angle-left"></i> Home
            </a>
            <div class="nav-menu">
                <a href="#about" class="nav-link">About Project</a>
                <a href="#technologies" class="nav-link">Technologies</a>
                <% if (galleryImgs) { %>
                    <a href="#gallery" class="nav-link">Gallery</a>
                <% } %>
            </div>
            <i class="fas fa-bars burger"></i>
        </div>
    </nav>
    <div class="hero-section project-hero">
        <div class="project-desc-container center-txt">
            <h6 class="idea"><%= projectIdea %></h6>
            <h1 class="headline"><%= headline %></h1>
            <img src=<%= projectImg %> alt="cannot display" class="project-img">
        </div>
    </div>
    <div id="about" class="project-desc-container">
        <h3 class="desc-label">Description: </h3>
        <p class="desc"><%= description %></p>
    </div>
    <div class="project-desc-container">
        <h3 class="desc-label">My Responsibilities: </h3>
        <p class="desc"><%= responsibilities %></p>
    </div>
    <div id="technologies" class="project-desc-container">
        <h3 class="desc-label">Technologies & tools: </h3>
            <ul>
                <% technologies.forEach((technology) => { %>
                    <li class="tech-item"><%= technology %></li>
               <% }); %>
            </ul>
    </div>
    <div class="medium-nav-container">
        <div class="medium-nav-grid">
            <% if (additionalLink) { %>
                <div>
                    <a class="btn-default" target="_blank" href=<%= additionalLink.link %>><%= additionalLink.label %></a>
                </div>
            <% } %>
            <% if (github) { %>
                <div>
                    <a class="btn-default" href=<%= github %>><i class="fab fa-github"></i> see github</a>
                </div>
            <% } %>
        </div>
    </div>
    <div id="gallery" class="photo-gallery">
        <div class="container gallery-container">
            <div class="intro">
                <h2 class="text-center">Gallery:</h2>
            </div>
            <div class="row photos">
                <% if (galleryImgs) { %>
                    <% galleryImgs.forEach((img) => { %>
                        <div class="col-sm-6 col-md-4 col-lg-3 item"><a href=<%= img %> data-lightbox="photos"><img class="img-fluid" src=<%= img %>></a></div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </div>
    <div class="low-nav">
        <a href=<%= previous %> class=nav-link>
            <i class="fas fa-angle-left"></i>
            previous
        </a>
        <a href=<%= next %> class=nav-link>
            next
            <i class="fas fa-angle-right"></i>
        </a>
    </div>
    <footer class="with-separation">
        <div class="container center-txt">
            <p>Page developed by:</p>
            <h1>Krzysztof Ma≈Çczak</h1>
            <a href="https://www.linkedin.com/in/krzysztof-malczak/"><i class="fab fa-linkedin"></i></a>
            <a href="https://github.com/krzysztofMlczk"><i class="fab fa-github"></i></a>
            <a href="../contact"><i class="fas fa-phone-alt"></i></a>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/js/lightbox.min.js"></script>
    <script src="../../scripts/nav.js"></script>
</body>
</html>